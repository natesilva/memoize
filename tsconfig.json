{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "rootDir": ".",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "target": "ES2017",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "experimentalDecorators": true
  }
}
